<!DOCTYPE html>
<html>
  <%- include('../head') -%>

  <body>
    <div class="container-fluid">
      <a href="/" class="float-left">
        <h2>
          <img src="/images/logo/a3284904ff3ca9a0dbf313ebbe960570.jpg" class="logo">
          Quick Social
        </h2>
      </a>
    </div>
    <br>
    <center>

    </center>
<div class="col-sm-6 col-sm-offset-3">
    <!-- show any messages that come back with authentication -->
    <% if (error) { %>
    <div class="alert alert-danger">
        <%= error %>
    </div>
    <% } %>
      <br><br>
      <form action="/account/getin" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label class="text-muted">Username</label>
            <input type="text" placeholder="your_user_name" class="form-control" name="username" required>
        </div>
        <div class="form-group">
            <label class="text-muted">Password</label>
            <input type="password" placeholder="password" class="form-control" name="password" required>
        </div>

        <button type="submit" class="btn btn-action btn-warning">Sign In</button>

    </form>

    <hr>
    <span class="text-muted">No Account? <a href="/account/new">Create One Now!</a> </span>
  <script type="text/javascript" src="/javascripts/socket.io.js"></script>
  <script type="text/javascript" src="/javascripts/connect.js"></script>
</div>
